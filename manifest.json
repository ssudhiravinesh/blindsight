{
  "manifest_version": 3,
  "name": "Blind-Sight",
  "version": "1.0.0",
  "description": "Your Legal Firewall - Scans Terms of Service for harmful clauses.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/detector.js",
        "content/extractor.js",
        "content/blocker.js",
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}