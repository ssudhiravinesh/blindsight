{
  "manifest_version": 3,
  "name": "Blind-Sight",
  "version": "0.2.0",
  "description": "Scans Terms of Service for harmful clauses.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/detector.js"]
    }
  ]
}
